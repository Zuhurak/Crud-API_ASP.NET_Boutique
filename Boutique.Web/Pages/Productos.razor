@page "/productos"
@using Boutique.Web.Models
@using Boutique.Web.Services
@inject ProductosService productosService

<h3>Lista de Productos</h3>

@if (productos == null)
{
    <p>Cargando...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in productos)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Nombre</td>
                    <td>@p.Precio</td>
                    <td>@p.Stock</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-2" @onclick="() => Editar(p)">Editar</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => Eliminar(p.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h4>Agregar nuevo producto</h4>

<input @bind="nuevo.Nombre" placeholder="Nombre" class="form-control" />
<input @bind="nuevo.Precio" placeholder="Precio" type="number" step="0.01" class="form-control mt-2" />
<input @bind="nuevo.Stock" placeholder="Stock" type="number" class="form-control mt-2" />

<button class="btn btn-primary mt-2" @onclick="Guardar">Guardar</button>

<hr />

@if (editando != null)
{
    <h4>Editar producto</h4>

    <input @bind="editando.Nombre" class="form-control" />
    <input @bind="editando.Precio" type="number" step="0.01" class="form-control mt-2" />
    <input @bind="editando.Stock" type="number" class="form-control mt-2" />

    <button class="btn btn-success mt-2" @onclick="GuardarEdicion">Actualizar</button>
    <button class="btn btn-secondary mt-2 ms-2" @onclick="CancelarEdicion">Cancelar</button>
}

@code {
    List<Producto> productos;
    Producto nuevo = new();
    Producto? editando = null;

    protected override async Task OnInitializedAsync()
    {
        productos = await productosService.GetProductos();
    }

    async Task Guardar()
    {
        await productosService.CrearProducto(nuevo);
        nuevo = new Producto();
        productos = await productosService.GetProductos();
    }

    void Editar(Producto p)
    {
        editando = new Producto
        {
            Id = p.Id,
            Nombre = p.Nombre,
            Precio = p.Precio,
            Stock = p.Stock
        };
    }

    async Task GuardarEdicion()
    {
        await productosService.ActualizarProducto(editando);
        editando = null;
        productos = await productosService.GetProductos();
    }

    void CancelarEdicion()
    {
        editando = null;
    }

    async Task Eliminar(int id)
    {
        await productosService.EliminarProducto(id);
        productos = await productosService.GetProductos();
    }
}
